        <Ellipse Height="41"
                 Width="41" 
                 Canvas.Left="291" 
                 Canvas.Top="63" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Ellipse.Fill>
                <ImageBrush ImageSource="Images/cat.jpg"
                            Stretch="Fill" ></ImageBrush>
            </Ellipse.Fill>
        </Ellipse>

        <Label Content="Girl"
               FontSize="21"
               Foreground="Black"
               Canvas.Right="10"
               Canvas.Left="341" 
               Canvas.Top="64" HorizontalAlignment="Center" VerticalAlignment="Top" ></Label>

        <Button Height="55" 
                Width="271" 
                Canvas.Top="155"
                Background="White"
                BorderThickness="0"
                >
            <Label FontSize="18" Width="160">
                Allisa Porshe
            </Label>

        </Button>
        <Ellipse Height="41"
                 Width="41" HorizontalAlignment="Left" Canvas.Top="163" VerticalAlignment="Center" Canvas.Left="10"
                 >
            <Ellipse.Fill>
                <ImageBrush ImageSource="Images/cat.jpg"
                            Stretch="Fill"></ImageBrush>
            </Ellipse.Fill>
        </Ellipse>
    </Canvas>
