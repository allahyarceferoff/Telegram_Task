               Canvas.Top="8" 
               Width="50"   />

        <Label Content="Telegram"
               FontSize="20"
               FontWeight="Bold"
               Canvas.Left="58"
               Canvas.Top="10"></Label>

        <TextBlock  Width="1000" 
                    Height="1"
                    Background="#D8D8D8 "
                    Canvas.Top="55" ></TextBlock>

        <Image Source="Images/daire.png"
               Canvas.Left="763" 
               Height="48" Width="68"
               Canvas.Top="4"/>

        <Label Content="Vitaly Medvedev" 
               FontSize="18"
               FontWeight="Normal"
               Canvas.Right="50"
               Canvas.Top="10" 
               Canvas.Left="818" ></Label>

        <Image Source="Images/arrow.png"
               Canvas.Right="10"
               Height="30"
               Canvas.Left="965" 
               Width="16" 
               Canvas.Top="12"  ></Image>

        <Label Content="VM"
               FontSize="18"
               Foreground="White"
               Canvas.Right="10"
               Canvas.Left="778" 
               Canvas.Top="11" ></Label>

        <TextBlock  Width="2"
                    Height="580" 
                    Background="#D8D8D8 "
                    Canvas.Left="272" 
                    Canvas.Top="55" />

        <TextBlock  Width="1000"
                    Height="1" 
                    Background="#D8D8D8 "
                    Canvas.Top="110" ></TextBlock>

        <Image Source="Images/searchh.png" 
               Canvas.Right="10" 
               Height="21"
               Canvas.Left="10
               " Width="20" 
               Canvas.Top="75" ></Image>

        <TextBox MouseUp="searchTxtB_MouseLeftButtonUp"
                 Name="searchTxtB" 
                 Foreground="#D8D8D8" 
                 Text="Search" 
                 FontSize="16" 
                 Canvas.Left="39" 
                 Canvas.Top="75" 
                 Width="230"
                 Height="28"
                 BorderThickness="0" ></TextBox>

        <Label Content="Resent" 
               FontSize="13" 
               FontWeight="Bold"
               Foreground="Gray"
               Canvas.Right="10"
               Canvas.Left="10" 
               Canvas.Top="120" ></Label>

        <Image Source="Images/arrow.png"
               Canvas.Right="10" 
               Height="14" 
               Canvas.Left="245" 
               Width="13"  
