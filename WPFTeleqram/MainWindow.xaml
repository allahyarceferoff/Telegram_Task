        xmlns:local="clr-namespace:WPFTeleqram"
        mc:Ignorable="mc"
        Title="Telegam" Height="635" Width="1000"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent" 
        Icon="/Telegram small icon.png"
